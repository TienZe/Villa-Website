@model LoginRequestDTO

<form asp-controller="Auth" asp-action="Login" method="post" class="mx-auto" style="width: 40%;">
    <h1 class="text-center">Login</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="Username" class="form-control" placeholder="">
        <label asp-for="Username"></label>
    </div>
    <div class="mb-3">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Password" type="password" class="form-control" placeholder="">
        <label asp-for="Password"></label>
    </div>
    <div class="mb-3">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </div>
</form>
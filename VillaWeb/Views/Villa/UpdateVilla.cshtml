@model VillaUpdateDTO

<div class="container px-5">
    <h2 class="text-center mb-3">Update Villa</h2>

    <div class="row gx-5">
        <img src="@Model.ImageUrl" class="col-4 img-thumbnail align-self-start">

        <form method="post" enctype="multipart/form-data" asp-controller="Villa" asp-action="UpdateVilla" class="col-7 offset-1">
            <input asp-for="Id" type="hidden">
            <input asp-for="ImageUrl" type="hidden">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Occupancy" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Occupancy" class="form-control">
                    <span asp-validation-for="Occupancy" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Sqft" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Sqft" class="form-control">
                    <span asp-validation-for="Sqft" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Details" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Details" class="form-control"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Rate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Rate" class="form-control">
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Amenity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Amenity" class="form-control"></textarea>
                    <span asp-validation-for="Amenity" class="text-danger"></span>
                </div>
            </div>
        
            <div class="mb-3 row">
                <label asp-for="NewImage" class="col-sm-2 col-form-label">New Image</label>
                <div class="col-sm-10">
                    <input asp-for="NewImage" class="form-control">
                    <span asp-validation-for="NewImage" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row justify-content-end">
                <div class="col-3">
                    <a asp-controller="Villa" asp-action="IndexVilla" class="btn btn-primary w-100">Back to List</a>
                </div>
                <div class="col-3">
                    <button type="submit" class="btn btn-success w-100">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>


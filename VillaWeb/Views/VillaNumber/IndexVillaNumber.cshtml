@model IEnumerable<VillaNumberDTO>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary">
                <i class="bi bi-plus-square-fill"></i> Create New VillaNumber
            </a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Villa Name</th>
                <th>Villa Number</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var villaNumberDto in Model) {
                <tr>
                    <td>@villaNumberDto.Villa.Name</td>
                    <td>@villaNumberDto.VillaNo</td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-id="@villaNumberDto.VillaNo" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <form asp-controller="VillaNumber" asp-action="DeleteVillaNumber" class="d-inline">
                            <input type="hidden" name="id" value="@villaNumberDto.VillaNo" />

                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

